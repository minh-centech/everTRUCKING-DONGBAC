            {
                switch (ultraTabControl1.SelectedTab.Key.ToUpper())
                {
                    case "CHUNGTUIN":
                        LoaiDanhMucChiTiet = DanhMucChungTuIn.TableName;
                        bsChiTiet = bsChungTuIn;
