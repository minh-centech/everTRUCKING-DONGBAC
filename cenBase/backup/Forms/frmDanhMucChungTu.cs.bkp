        private void btThemChiTiet_Click(object sender, EventArgs e)
        {
            ThemChiTiet();
        }

        private void btSuaChiTiet_Click(object sender, EventArgs e)
        {
            SuaChiTiet();
        }

        private void btXoaChiTiet_Click(object sender, EventArgs e)
