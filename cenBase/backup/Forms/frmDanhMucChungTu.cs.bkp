        private void frmDanhMucChungTu_KeyDown(object sender, KeyEventArgs e)
        {
            switch (e.KeyCode)
            {
                case Keys.F9:
                    ThemChiTiet();
                    break;
                case Keys.F11:
                    SuaChiTiet();
                    break;
                case Keys.F12:
                    XoaChiTiet();
                    break;
            }
        }

