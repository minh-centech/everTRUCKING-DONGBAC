                cenBase.Classes.DanhMuc DanhMucUI = new cenBase.Classes.DanhMuc();
                DanhMucUI.IDDanhMucLoaiDoiTuong = null;
                DanhMucUI.LoaiDanhMuc = LoaiDanhMucChiTiet.ToUpper();
